{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests: abetterworld (filter: dynamics)",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": ["test", "--manifest-path", "crates/abetterworld/Cargo.toml"],
        "filter": { "kind": "test", "name": "abetterworld" }
      },
      "program": "${cargo:program}",
      "args": ["--nocapture", "--exact", "dynamics"],
      "cwd": "${workspaceFolder}",
      "env": { "RUST_BACKTRACE": "1" },
      "sourceLanguages": ["rust"]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'abetterworld'",
      "cargo": {
        "args": [
          "test",
          "--manifest-path",
          "crates/abetterworld/Cargo.toml",
          "dynamics"
        ]
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'desktop'",
      "cargo": {
        "args": ["build", "--bin=desktop", "--package=desktop"],
        "filter": {
          "name": "desktop",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'desktop'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=desktop", "--package=desktop"],
        "filter": {
          "name": "desktop",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
